<Window x:Class="FastVideoDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snappy Downloader" Height="340" Width="550"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Icon="logo.ico">

    <Grid x:Name="MainGrid" Margin="10">

        <Button x:Name="ThemeBtn" Content="🎨" 
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Width="30" Height="30" Click="ThemeBtn_Click"
                Background="Transparent" BorderThickness="0" 
                FontSize="16" Cursor="Hand" ToolTip="Change Theme"/>

        <StackPanel VerticalAlignment="Center" Margin="10">

            <TextBlock x:Name="LblUrl" Text="1. Video Link (.m3u8):" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="UrlInput" Height="30" Padding="5" VerticalContentAlignment="Center"
                     Text="https://v.redd.it/........./HLSPlaylist.m3u8"/>

            <TextBlock x:Name="LblPath" Text="2. Save Location:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="OutputPath" Grid.Column="0" Height="30" 
                         Padding="5" VerticalContentAlignment="Center"
                         IsReadOnly="True" Background="#F0F0F0" Text="Select a location..."/>

                <Button x:Name="BrowseBtn" Content="Browse..." Grid.Column="1" Margin="10,0,0,0"
                        Click="BrowseBtn_Click" Cursor="Hand"/>
            </Grid>

            <ProgressBar x:Name="DownloadProgress" Height="4" Margin="0,20,0,0" 
                         IsIndeterminate="True" Visibility="Collapsed" Foreground="#0078D7"/>

            <TextBlock x:Name="StatusText" Text="Ready" Foreground="Gray" 
                       HorizontalAlignment="Center" Margin="0,10,0,5"/>

            <Button x:Name="DownloadBtn" Content="Download Video" Height="40" 
                    Click="DownloadBtn_Click" Background="#0078D7" Foreground="White" 
                    FontWeight="Bold" Cursor="Hand" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>